<%= javascript_pack_tag 'new' %>

<div class="sign-up-form rounded">
  <div class="border border-dark rounded p-4 sign-up-form-inside">
    <form id="user-form">
      <div class="form-group">
        <label for="name">이름</label>
        <input type="text" class="form-control" id="name"/>
        <small id="name_error" class="text-danger"></small>
      </div>
      <div class="form-group">
        <label for="company-id">사원번호</label>
        <input type="number" class="form-control" id="company_id"/>
        <small id="company_id_error" class="text-danger"></small>
      </div>
      <div class="form-group">
        <label for="nfc-id">NFC번호</label>
        <input type="text" class="form-control" id="nfc_id"/>
        <small id="nfc_id_error" class="text-danger"></small>
      </div>
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" id="face-regist">
        얼굴등록
      </button>
    </form>
  </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">얼굴 등록</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <video id="preview" controls autoplay></video>
      </div>
    </div>
  </div>
</div>
